@using Hex.ExampleWebsite.ViewModels.CheckBoxValue

@model IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using( Html.BeginForm() )
{
	<h2>Strings</h2>
	@Html.ValidationMessageFor( x => x.SelectedStringValues )<br />
	<input type="hidden" name="SelectedStringValues.CheckBoxList" value="" />
	foreach( string currentStringValue in this.Model.StringValues )
	{
		@Html.CheckBoxListItemFor( x => x.SelectedStringValues, currentStringValue )<b>@currentStringValue</b><br />
	}
	
	<h2>Integers</h2>
	@Html.ValidationMessageFor( x => x.SelectedIntValues )<br />
	foreach( int currentIntValue in this.Model.IntValues )
	{
		@Html.CheckBoxListItemFor( x => x.SelectedIntValues, currentIntValue )<b>@currentIntValue</b><br />
	}
	
	<h2>Entities</h2>
	@Html.ValidationMessageFor( x => x.SelectedEntityIds )<br />
	foreach( NestedEntity currentEntity in this.Model.NestedEntities )
	{
		@Html.CheckBoxListItemFor( x => x.SelectedEntityIds, currentEntity.Id )<b>@currentEntity.Name</b><br />
	}
	
	<br />
	@Html.ValidationMessageFor( x => x.CheckBoxWithValue )<br />
	@Html.CheckBoxFor( x => x.CheckBoxWithValue, YesNoType.Yes, YesNoType.No, x => x.AddClass( "CheckBoxWithValue" ) )
	@Html.LabelFor( x => x.CheckBoxWithValue, "Yes or No?" )

	<br />
	<br />
	
	<input type="submit" value="submit" />
}
